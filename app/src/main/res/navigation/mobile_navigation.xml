    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.kriaactividade.xitiqueapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_payment"
        android:name="com.kriaactividade.xitiqueapp.ui.payment.PaymentFragment"
        android:label="@string/title_payment"
